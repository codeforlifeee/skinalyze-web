# Application Settings
APP_NAME=SkinAlyze
DEBUG=False

# Database (Use your production database URL)
# For Render.com, you'll get a PostgreSQL URL automatically
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=https://your-api-audience
AUTH0_ALGORITHMS=["RS256"]

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://skinalyze-web.vercel.app

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# AI Model
MODEL_PATH=app/ml/models/skin_classifier.tflite
MODEL_CONFIDENCE_THRESHOLD=0.5
